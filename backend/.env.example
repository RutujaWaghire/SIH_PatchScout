# Application Configuration
APP_NAME=PatchScout
APP_VERSION=1.0.0
DEBUG=True
SECRET_KEY=your-secret-key-change-this-in-production
API_V1_STR=/api/v1

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=True

# Database Configuration
DATABASE_URL=postgresql://patchscout:patchscout123@localhost:5432/patchscout_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j_password
NEO4J_DATABASE=neo4j

# ChromaDB Configuration
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHROMA_COLLECTION_NAME=vulnerabilities
CHROMA_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# External APIs
NVD_API_KEY=your-nvd-api-key-here
NVD_API_URL=https://services.nvd.nist.gov/rest/json/cves/2.0
NVD_RATE_LIMIT=5
EXPLOITDB_MOCK=True
RAPID7_API_KEY=your-rapid7-key

# Scanning Configuration
MAX_CONCURRENT_SCANS=5
SCAN_TIMEOUT=3600
DEFAULT_SCAN_TYPE=comprehensive

# Scanner Tool Paths
NMAP_PATH=/usr/bin/nmap
NIKTO_PATH=/usr/bin/nikto
NUCLEI_PATH=/usr/local/bin/nuclei
OPENVAS_HOST=localhost
OPENVAS_PORT=9390

# AI/ML Configuration
HUGGINGFACE_MODEL=microsoft/DialoGPT-medium
HUGGINGFACE_CACHE_DIR=./model_cache
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
MAX_CHAT_HISTORY=10
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://localhost:8080"]

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/patchscout.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100

# Background Tasks
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Feature Flags
ENABLE_REAL_NMAP=True
ENABLE_MOCK_OPENVAS=True
ENABLE_MOCK_NESSUS=True
ENABLE_REAL_NIKTO=False
ENABLE_REAL_NUCLEI=False
ENABLE_THREAT_INTEL=True
ENABLE_RAG_CHATBOT=True
ENABLE_ATTACK_PATHS=True

# ====================================
# ENTERPRISE FEATURES
# ====================================

# OpenVAS/GVM Real Integration
GVM_HOST=localhost
GVM_PORT=9390
GVM_USERNAME=admin
GVM_PASSWORD=admin
GVM_USE_SOCKET=false
GVM_SOCKET_PATH=/var/run/gvmd.sock

# Nessus/Tenable Real Integration
USE_TENABLE_IO=false
TENABLE_ACCESS_KEY=your_tenable_access_key
TENABLE_SECRET_KEY=your_tenable_secret_key
NESSUS_URL=https://localhost:8834
NESSUS_USERNAME=admin
NESSUS_PASSWORD=admin
NESSUS_ACCESS_KEY=
NESSUS_SECRET_KEY=
NESSUS_VERIFY_SSL=false

# Email Notifications
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_USE_TLS=true
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=PatchScout Security
ALERT_EMAILS=security@company.com,admin@company.com
EMAIL_MIN_SEVERITY=high

# Scheduled Scans
SCHEDULED_SCANS_ENABLED=false
DAILY_SCAN_TARGETS=prod-server1.com,prod-server2.com
WEEKLY_SCAN_TARGETS=staging.company.com,dev.company.com

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=60
