# Application Configuration
APP_NAME=PatchScout
APP_VERSION=1.0.0
DEBUG=True
SECRET_KEY=your-secret-key-change-this-in-production
API_V1_STR=/api/v1

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=True

# Database Configuration - Using SQLite for easy setup
DATABASE_URL=sqlite:///./patchscout.db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# External APIs
NVD_API_KEY=
NVD_API_URL=https://services.nvd.nist.gov/rest/json/cves/2.0
NVD_RATE_LIMIT=5

# Scanning Configuration
MAX_CONCURRENT_SCANS=5
SCAN_TIMEOUT=3600
DEFAULT_SCAN_TYPE=comprehensive

# Scanner Tool Paths
NMAP_PATH=/usr/bin/nmap
OPENVAS_PORT=9390

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://localhost:8080"]

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/patchscout.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Feature Flags
ENABLE_REAL_NMAP=True
ENABLE_MOCK_OPENVAS=True
ENABLE_MOCK_NESSUS=True
